<nav><a href="/"><h2>NutritionHack</h2></a></nav>
<div id="container">
  <h3>My Diet Log</h3>
  <div id="buttons">
<p><a href="private"><button>Dashboard</button></a></p>
</div>
<div class="flex-container">
<div class="message-form">

  <p>Write a log for your dietitian.</p>
  <form validated action="/message" method="post" class="form-container2">
  <div class="form-group">
    <label for="date">Date:</label>
  <input type="date" class="form-control" name="date" id="date">
  </div>
    <div class="form-group">
    <label for="subject">Subject:</label>
  <input type="text" name="subject" id="subject" class="form-control">
  </div>

    <div class="form-group">
     <label for="message">Message:</label>

  <textarea id="message-text" name="body" class="form-control" id="message"></textarea>
  </div>
  <p><button>Post</button></p>
  </form>
</div>

<div class="card-container2">
      {{#each messages as |message|}}
 <div class="card message-card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{message.subject}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{message.date}}</h6>
    <p class="message-text">{{message.body}}</p>
    <p class="delete"><a href="/delete/{{message._id}}">Delete</a></p>
  </div>
</div>

 {{/each}}

</div>
</div>
</div>